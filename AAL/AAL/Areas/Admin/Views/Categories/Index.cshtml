@model IEnumerable<AAL.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="padding">
    <div class="box">
        <div class="table-responsive">
            <table class="table p-1">
                <thead>
                    <tr>
                        <th>
                           Category Name
                        </th>
                        <th>
                            Category Parent
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CatName)
                            </td>
                            <td>
                                
                                    @if(item.CatParent == null)
                                    {
                                        @Html.Raw("No parent");
                                    }else
                                        @Html.DisplayFor(modelItem => item.CatParent.CatName)
                                 
                                    
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CatId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.CatId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.CatId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>