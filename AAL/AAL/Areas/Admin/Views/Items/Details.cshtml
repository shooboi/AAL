@model AAL.Models.Item

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="float-right page-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="">Item</a></li>
                    <li class="breadcrumb-item"><a>Details</a></li>
                </ol>
            </div>
            <h5 class="page-title">Item Details</h5>
        </div>
    </div>
</div>

<div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">
    <dl class="row">
        <dt class = "col-sm-2">
            Item Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Desc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Img)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Img" alt="" height=100 width=200></img>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cat.CatName)
        </dd>
        <dt class = "col-sm-2">
            Warehouse
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Warehouse.WarehouseName)
        </dd>
    </dl>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ItemId">Edit</a> 
</div>
</div>
</div>
</div>


