@model IEnumerable<AAL.Models.Item>

@{
    ViewData["Title"] = "Item list";
    Layout = "~/Areas/Admin/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h5 class="page-title">Items</h5>
        </div>
    </div>
    <!-- end row -->

    <div class="row ">
        <div class="col-12">
            <div class="card m-b-30 indexPage">
                <div class="padding">
                    <div class="box">
                        <div class="p-1 pl-10">
                            <a class="btn btn-primary" asp-action="Create">Create new</a>
                        </div>
                        <div class="table-responsive">
                            <table id="datatable" class="table table-bordered dt-responsive nowrap p-1">
                                <thead>
                                    <tr>
                                        <th>
                                            Item Name
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Brand)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Model)
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Img)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Price)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Stock)
                                        </th>
                                        <th>
                                            Category
                                        </th>
                                        <th>
                                            Warehouse
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ItemName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Brand)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Model)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Desc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Img)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Stock)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cat.CatName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Warehouse.WarehouseName)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a>
                                                <a asp-action="Details" asp-route-id="@item.ItemId">Details</a> 
                                                <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

