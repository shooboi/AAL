<!-- ...:::: Start Customer Login Section :::... -->
<div class="customer_login">
    <div class="container">
        <div class="row">
            <!--login area start-->
            <div class="col-lg-12 col-md-12">
                <div class="account_form">
                    <h3>login</h3>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="default-form-box mb-20">
                            <label>UserName <span>*</span></label>
                            <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true">
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="default-form-box mb-20">
                            <label>Passwords <span>*</span></label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" type="password">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="login_submit">
                            <button id="login-submit" type="submit" class="mb-20">login</button>
                            <label class="checkbox-default mb-20" for="offer">
                                <input asp-for="Input.RememberMe" type="checkbox" id="offer">
                                <span>Remember me</span>
                            </label>
                            <a id="forgot-password" asp-page="./ForgotPassword">Lost your password?</a>
                        </div>
                    </form>
                </div>
            </div>
            <!--login area start-->

        </div>
    </div>
</div> <!-- ...:::: End Customer Login Section :::... -->
<!-- material-scrolltop button -->
<button class="material-scrolltop" type="button"></button>

<!-- Start Modal Add cart -->
<div class="modal fade" id="modalAddcart" tabindex="-1" role="dialog" aria-hidden="true">
